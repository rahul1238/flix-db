# Server
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgres://user:password@localhost:5432/flixdb

# JWT
JWT_SECRET=change_me

# Mailer (fill all for authenticated SMTP; leave user/pass empty only if using open relay or local MailHog)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_FROM=noreply@example.com
MAIL_DRIVER=smtp # options: smtp | log | disable

# Optional API base for frontend (used to resolve images if relative)
PUBLIC_API_BASE=http://localhost:3001
